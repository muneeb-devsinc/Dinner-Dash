        <form class='pt-2'>
          <%= search_form_for(@q, method: :get)  do |f| %>
            <%= f.search_field :title_cont, placeholder: 'Search Product' %>
            <%= f.submit %>
          <% end %>
        </form>
      </div>
    </div>
  </div>
