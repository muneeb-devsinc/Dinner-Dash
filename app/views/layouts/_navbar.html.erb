          <li class='nav-item'>
            <%= link_to 'Edit Profile', edit_user_registration_path(current_user), class:'nav-link' %>
          </li>
          <li class='nav-item'>
            <%= link_to 'Sign out',destroy_user_session_path, method: :delete, class:'nav-link' %>
