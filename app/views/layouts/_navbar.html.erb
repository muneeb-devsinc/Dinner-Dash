<nav class='navbar navbar-expand-lg navbar-dark bg-dark'>
  <div class='container-fluid'>
    <%= link_to 'Dinner Dash',items_path, class:'navbar-brand' %>
    <button class='navbar-toggler' type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation'>
      <span class='navbar-toggler-icon'></span>
    </button>
    <div class='collapse navbar-collapse' id='navbarSupportedContent'>
      <ul class='navbar-nav me-auto mb-2 mb-lg-0'>
        <li class='nav-item'>
          <%= link_to 'Home',items_path, class:'nav-link' %>
        </li>
        <% if current_user&.admin? %>
          <li class='nav-item'>
            <%= link_to 'New Item',new_item_path, class:'nav-link' %>
          </li>
        <% end %>
        <li class='nav-item'>
          <%= link_to 'Categories',categories_path, class:'nav-link' %>
        </li>
        <li class='nav-item'>
          <%= link_to 'My Cart', cart_path, class:'nav-link' %>
        </li>
        <li class='nav-item'>
          <div class= 'nav-link'><%= session[:cart_count] %></div>
        </li>
        <% if user_signed_in?%>
          <% if current_user.admin? %>
            <li class='nav-item'>
              <%= link_to 'All Orders', orders_path, class:'nav-link' %>
            </li>
            <li class='nav-item'>
              <%= link_to 'All Users', admin_index_path, class:'nav-link' %>
            </li>
          <% else %>
            <li class='nav-item'>
              <%= link_to 'My Orders', user_orders_path, class:'nav-link' %>
            </li>
