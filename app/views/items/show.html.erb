<%= cl_image_tag(@item.picture.key, height: 100, width: 100, gravity: :face, crop: :thumb, sign_url: true, default_image: 'cookie.jpeg') %>

<h4 class= 'display-4'><%= @item.title %></h4>
<br>
<p class ='display-6'><%= @item.description %></p>
<br>
<p class ='h3'>Price: <%= @item.price %></p>
<br>
<p class ='display-6'><%= @item.status %></p>
<br>
<% if @item.active? %>
  <%= link_to 'Add to Cart',order_items_path(item_id: @item.id, unit_price: @item.price, item_title: @item.title),remote: true, method: :post,class: 'btn btn-dark' %>
<% end %>
<%= link_to 'Back', url_for(:back), class:'btn btn-dark' %>

