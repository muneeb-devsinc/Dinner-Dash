<%if current_or_guest_user.admin?%>
  <%=link_to 'New Category',new_category_path, class: "btn btn-dark"%>
<%end%>
<table class="table">
<% @categories.each do |category| %>
    <tr>
      <td><%= category.category %></td>
      <td><%= link_to 'Show Items',category_path(category)%>
      <td><%= link_to 'Destroy', category_path(category),
              method: :delete,
              data: { confirm: 'Are you sure?' },class: "btn btn-dark" %></td>
    </tr>
  <% end %>
  </table>
