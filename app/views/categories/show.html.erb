<%if @category.nil?%>
  <h1>No Items in this Category</h1>
<%else%>
  <table class="table">
  <tr>
    <th colspan="1">
    <th>Title</th>
    <th>Description</th>
    <th>Price</th>
    <th>Category</th>
    <th colspan="1"></th>
  </tr>
  <% @category.each do |item| %>
    <tr>
      <td><%= cl_image_tag(item.item_picture.key, height: 100, width: 100, gravity: :face, crop: :thumb, sign_url: true) %></td>
      <td><%= item.title %></td>
      <td><%= item.description %></td>
      <td><%= item.price %></td>
      <td><%= render item.categories%></td>
      <%if item.active?%>
        <td><%= link_to 'Add to Cart',order_items_path(item_id: item.id, unit_price: item.price, item_title: item.title), method: :post,class: "btn btn-dark"%></td>
      <%end%>
      <td><%= link_to 'Show Item',item_path(item), class: "btn btn-dark"%></td>
    </tr>
    <% end %>
  </table>
  <td><%= link_to 'Back to Categories',categories_path, class: "btn btn-dark"%></td>
<%end%>
